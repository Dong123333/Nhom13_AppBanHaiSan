<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/color_gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/back"
            android:src="@drawable/back"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/icon"
            android:layout_marginTop="-65dp"/>

        <TextView
            android:id="@+id/dangki"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Đăng kí"
            android:textSize="34sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:id="@+id/hoten"
            android:layout_gravity="center"
            android:background="@drawable/input_round"
            android:fontFamily="@font/roboto_regular"
            android:hint="Họ và tên"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            />


        <EditText
            android:id="@+id/sdt"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/input_round"
            android:fontFamily="@font/roboto_regular"
            android:hint="Số điện thoại"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            />
        <EditText
            android:id="@+id/mk"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/input_round"
            android:drawableRight="@drawable/xemmk"
            android:fontFamily="@font/roboto_regular"
            android:hint="Số mật khẩu"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/nhaplaimk"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/input_round"
            android:drawableRight="@drawable/xemmk"
            android:fontFamily="@font/roboto_regular"
            android:hint="Số điện thoại"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/checkbox"
                android:src="@drawable/check"
                />
            <TextView
                android:id="@+id/dieukhoan0"
                android:layout_width="135dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:text="Tôi đồng ý với các"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/dieukhoan"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="điều khoản"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#CCCC00"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/dieukhoan1"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="sau"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>
        <Button
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:id="@+id/btndangnhap"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="Đăng kí"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:background="@drawable/btnlogin_round"

            />
    </LinearLayout>
</RelativeLayout>