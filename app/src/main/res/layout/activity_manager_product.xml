<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ManagerProductActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#33DAFF">
        <ImageView
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/backspace"
           android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý sản phẩm"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#58E0FA"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/themSanPham"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/btnsanpham"
                    android:text="Thêm sản phẩm"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:gravity="center_vertical|center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btnsanpham"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Lọc"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:gravity="center_vertical|center_horizontal"
                />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/filte" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@drawable/textinput"

            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập tên sản phẩm"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/searchsanpham"/>

        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/listManagerProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:background="#C7F9F9"/>

</RelativeLayout>