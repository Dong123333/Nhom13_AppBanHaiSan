<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:id="@+id/imageManagerProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#C7E1F9"
            android:src="@drawable/fish1"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameManagerProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Cá mú sống"
                android:textColor="#3333FF"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_bold"
                />
            <TextView
                android:id="@+id/priceManagerProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Giá: 150.000đ"
                android:textColor="#FD1E00"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_bold"
                />
            <TextView
                android:id="@+id/quyCachManagerProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Quy cách: 1.5 - 1.8kg/con"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_bold"
                />
            <TextView
                android:id="@+id/soLuongManagerProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Số lượng: 15 con"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/sua"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/notes"/>
            <ImageView
                android:id="@+id/xoa"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/delete"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>